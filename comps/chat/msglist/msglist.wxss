.scroll_view,
.scroll_view_change {
	width: 100%;
	position: absolute;
	left: 0;
	top: 75px;
	right: 0;
	bottom: 75px;
}
.scroll_view.nomoll,
.scroll_view_change.nomoll{
    top: 0px;
}
.scroll_view_change {
	bottom: 220px;
}

.message {
	width: 92%;
	height: auto;
	padding: 10px 15px;
}

.time {
	text-align: center;
    margin-bottom: 5px;
}

.time .time-text {
	display: inline-block;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(164,164,164,1);
	line-height: 24rpx;    
}

.user .user-text {
	margin: auto auto 4px 0;
	font-size: 12px;
	color: #dcdcdc;
	display: block;
}

.avatar {
	width: 84rpx;
	height: 84rpx;
  border-radius: 50%;
	margin: 0 10px 0 0;
	float: left;
  overflow: hidden;
}

.msg {
	/* display: flex; */
	/* justify-content: center; */
	display: inline-block;
	/* position: relative; */
	padding: 4rpx 20rpx;
	max-width: calc(85% - 40px);
	/* min-height:(12 + 5 * 2) px; */
	font-size: 12px;
	overflow: hidden;
	text-align: left;
	word-break: break-all;
	background-color: #fff;
	border-radius: 4px;
  /* margin-top: 10rpx; */
  /* height:84rpx; */
}

.msg .msg-text {
	line-height: 75rpx;
  word-wrap:break-word;
  font-size: 30rpx;

}

.msg:before {
	content: " ";
	position: absolute;
	top: 9px;
	right: 100%;
	border: 6px solid transparent;
	border-right-color: #EDEDED;
}

.self {
	text-align: right;
}

.self .avatar {
	float: right;
	margin: 0 0 0 10px;
}

.self .user {
	margin: auto 2px 4px auto;
	font-size: 12px;
	color: #dcdcdc;
}

.self .msg {
	background:rgba(244,67,54,1);
    color: #fff;
    line-height: 60rpx;
    border-radius: 15rpx;
}

.self .msg:before {
	right: inherit;
	left: 100%;
	border-right-color: transparent;
	border-left-color:#F44336;
}

.template {
	display: inline;
}
.text_state{
    font-size: 12px;
    color: #999;
    margin-right: 110rpx;
    margin-top: 14rpx;
}
.push_btn{
   background:rgba(247,247,248,1);
    font-size: 12px;
    border: 1px solid #FF6952;
    padding: 0px 5px;
    display: inline-block;
    color: #FF6952;
    border-radius: 3px;
}
.show_details{
   padding: 10px 20px;
   width: 100%;
    height:74px;
    background:rgba(255,255,255,1);
    z-index: 100;
    position: fixed;
    top: 0px;
    box-sizing: border-box;
}

.show_details .info .img{
   width: 50px;
   height: 50px;
   float: left;
   margin-right: 10px;
   border-radius: 50px;
}
.show_details .info{
    font-size: 12px;
    color: #666;
}
.show_details .info .jobs{
    line-height: 25px;
    width: 18em;
}
.show_details .info .name{
    font-size: 16px;
    color: #333;
    padding-top: 5px;
}
.show_details  .arrow{
    width: 8px;
    height: 15px;
    position: relative;
    top: 15px;
}
.lw_dflex {display: -webkit-box;/* OLD - iOS 6-, Safari 3.1-6 */
    display: -moz-box;/* OLD - Firefox 19- (buggy but mostly works) */
    display: -ms-flexbox;/* TWEENER - IE 10 */
    display: -webkit-flex;/* NEW - Chrome */
    display: flex;/* NEW, Spec - Opera 12.1, Firefox 20+ */
}
.lw_flex {-webkit-box-flex: 1;-moz-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;}
.ellipsis{text-overflow: ellipsis;white-space: nowrap;overflow: hidden;}

.scrollStyle{
   width: 100%;
   height: 100%; 
   display: flex;
  flex-direction: column; 
}