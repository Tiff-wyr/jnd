.list_left{
  height: 144prx;
  display: flex
}
.list_left .line{
    padding-top: 10rpx;
    display: flex;
    justify-content:space-around;
    font-size: 24rpx;
    flex: 1
}
.noData{
    text-align: center
}
.noDataText{
width: 100%;
height:32rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(74,74,74,1);
line-height:32rpx;
margin-top: 100rpx
}
.search {
	justify-content:space-around;
}
.search_input {
	justify-content:space-around;	
}
.search view, .search_input view {
	height: 28px;
	line-height: 40rpx;
	background-color: #ffffff;
	border-radius: 5rpx;
	text-align: center;
	display: flex;
	align-items: center;
}
.search view {
	width: 96%;
	justify-content:center;
}
.search image {
	display: block;
	width: 5%;
	height: 50%;
}
.search_input view {
	padding-left: 10rpx;
}
.search icon,.search_input icon {
	display: inline-block;
	margin: 13px 4px 0 0;
	height: 26rpx;
	line-height: 26rpx;
}
.search text {
	font-size: 24rpx;
	color: #CFCFCF;
}
.search_input view {
	width: 79%;
	text-align: left;
}
.search_input text {
	display: inline-block;
	width: 40px;
	height: 30px;
	line-height: 30px;
	font-size: 16px;
	color:#7B68EE;
}
.search_input input {
	font-size: 14px;
	width: 90%;
}
.mask {
	background-color: black;
	opacity: 0.4;
	position: absolute;
	top: 40px;
	left: 0;
	right: 0;
	bottom: 0;
}
.chat_list {
	width: 100%;
	height: 144rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  background-color: #fff; 
}
.list_user{
    font-size: 30rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
    display: inline-block;
    margin-bottom: 6rpx;
    color: #333333;
    line-height: 42rpx;
}

.list_text {
	flex: 1;
	font-size: 4rpx;
    border-bottom: 1px solid #ececec;
    height: 144rpx;
}
.list_pic {
	position: relative;
	float: left;
	margin-top: 28rpx;
	margin-right: 28rpx;
}
.list_pic image {
	display: block;
	width: 88rpx;
	height: 88rpx;
  border-radius: 50%;
	box-sizing: border-box;
	/* border: 1px solid rgb(0,186,110); */
}
.em-msgNum {
	position: absolute;
	right: -10px;
	top: -10px;
	width: 20px;
	height: 20px;
	border-radius: 10px;
	background: #f04134;
	color: #fff;
	line-height: 20px;
	font-size: 14px;
	text-align: center;
}

