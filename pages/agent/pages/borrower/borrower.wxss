/* pages/agent/borrower/borrower.wxss */

.top{
  background:rgba(255,255,255,1);
  padding: 0 36rpx;
  box-sizing: border-box;
}



.borr-middle {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
  background:rgba(255,255,255,1);
line-height:100rpx;
}
.borr-middle .money{
  display: flex;
}
.borr-middle .money .arrow{
  padding: 42rpx 0;
  box-sizing: border-box;
  line-height: 100rpx;
  margin-left: 5rpx;
}
.arrow-up{
  width: 10rpx;
  height: 10rpx;
  border: 1rpx solid rgba(205, 69, 69, 1);
  border-top-color:transparent;
  border-left-color: transparent;
  rotate: 225deg;
}
.arrow-bottom{
  width: 10rpx;
  height: 10rpx;
  border: 1rpx solid #888;
  border-top-color:transparent;
  border-left-color: transparent;
   rotate: 45deg;
   margin-top: -5rpx


}

.borr-bottom .wrap{
  display: flex;
  width:100%;
  height:192rpx;
  background:rgba(255,255,255,1);
  padding: 36rpx 36rpx;
  box-sizing: border-box;
}
.borr-bottom .add{
    width:100%;
  height:12rpx;
  background:#f0f0f0;
}
.borr-bottom .wrap .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:32rpx;
}
.borr-bottom .wrap .address{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
line-height:24px;
}
.btn {
  width: 140rpx;
  height: 46rpx;
background:rgba(244,67,54,1);
  border-radius: 23rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
  box-sizing: border-box;
  padding: 0 3rpx;

}


