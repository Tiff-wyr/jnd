/* pages/agent/borrowerDetail/borrowerDetail.wxss */
.detail-main{
height:100%;
background: #FAFAFB;
}
.detail{
  width:100%;
padding: 40rpx 36rpx;
box-sizing: border-box;
background:rgba(255,255,255,1);
}
.detail .top{
  display: flex;
  justify-content: space-between
}
.detail .top .phone{
font-size:44rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:120rpx;
letter-spacing:1rpx;
}
.name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
margin: 22rpx 0 15rpx 0;

}
.address{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
}

.middle{
  margin-top: 46rpx;
}

.middle .line{
  width:6rpx;
height:32rpx;
background:rgba(205,69,69,1);
border-radius:3rpx;
line-height:32rpx;
}
.middle .msg{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(31,31,31,1);
line-height:32rpx;
margin-left: 20rpx;
}
.age-wrap{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0 20rpx 0;
}
.age,.job,.money{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(164,164,164,1);
line-height:24rpx;
}

.line-wrap{
  width: 100%;
height:1rpx;
background:rgba(240,240,240,1);
margin: 46rpx 0 46rpx 0;
}




.bottom-detail{
height:96rpx;
position: fixed;
left: 0;
right: 0;
bottom: 0;
display: flex;
background: #fff;
}
.bottom-detail .look{
  width: 300rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 60rpx;
  box-sizing: border-box;
}
.look .phone-tu{
  line-height: 96rpx;
}
.look .lphone{
font-size:22rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(123,123,123,1);
line-height:96rpx;
}
.bottom-detail button{
  text-align: center;
  flex: 1;
height:96rpx;
background:rgba(205,69,69,1);
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height:96rpx;
border-radius: 0rpx;
}
