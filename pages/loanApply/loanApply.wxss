.radio {
  display: block;
  width:320rpx;
  height:96rpx;
  line-height: 96rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  color: #C7C7C7;
  border:1rpx solid rgba(199,199,199,1);
}
.checkbox {
  position: relative;
  font-size: 40rpx;
  padding: 10rpx 15rpx;
  margin: 10rpx 8rpx;
  display: inline-block;
  border-radius:6rpx;
  color: #C7C7C7;
  border:1px solid rgba(199,199,199,1);
}
.red-border {
 border:1px solid rgba(244,67,54,1);
 color: #F44336
}
.checkbox-icon {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  z-index: 12;
}
.sex-radio {
  width: 50%;
  height:96rpx;
  line-height: 96rpx;
  margin: 0 0 0 10rpx
}
.sex-radio-item {
  display: inline-block;
  margin-left: 40rpx
}
.wai {
  display: inline-block;
  vertical-align: middle;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border:1px solid rgba(164,164,164,1);
}
.nei{
   width: 12rpx;
