/* pages/agent/borrower/borrower.wxss */

.top{
  background:rgba(255,255,255,1);
  padding: 0 36rpx;
  box-sizing: border-box;
}



.borr-middle {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
  background:rgba(255,255,255,1);
line-height:100rpx;
}
.borr-middle .money{
  display: flex;
}
.borr-middle .new{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(244,67,54,1);
}
.borr-middle .money .arrow{
  padding: 42rpx 0;
  box-sizing: border-box;
  line-height: 100rpx;
  margin-left: 5rpx;
}
.arrow-up{
border: 10rpx solid #F44336;
border-left-color: transparent;
border-right-color: transparent;
border-top-color: transparent;
margin-top: -10rpx;
}
.arrow-bottom{
  border: 10rpx solid #454545;
  border-right-color:transparent;
  border-left-color: transparent;
  border-bottom-color: transparent;

}

.borr-bottom .wrap{
  display: flex;
  width:100%;
  height:192rpx;
  background:rgba(255,255,255,1);
  padding: 36rpx 36rpx;
  box-sizing: border-box;
}
.wrap image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}
.borr-bottom .add{
    width:100%;
  height:12rpx;
  background:#f0f0f0;
}
.borr-bottom .wrap .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:32rpx;
}
.borr-bottom .wrap .address{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
line-height:24px;
}
.btn {
  width: 140rpx;
  height: 46rpx;
background:rgba(244,67,54,1);
  border-radius: 23rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
  box-sizing: border-box;
  padding: 0 3rpx;

}


