.pass{
  padding: 50rpx 36rpx;
  box-sizing: border-box;
}
.pass image{
  width:100%;
  height:340rpx;
}
.pass .wrap{
  width:100%;
  height:96rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  border:1rpx solid rgba(199,199,199,1);
  display: flex;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin: 40rpx 0 30rpx 0;
}
.wrap .img1{
  width: 28rpx;
height: 40rpx;
  line-height: 56rpx;
  margin-top:7rpx;
}
.wrap .img2{
  width: 38rpx;
height: 19rpx;
  line-height: 56rpx;
  margin-top:19rpx;
}
.wrap .input{
  margin-left: 15rpx;
  flex: 1;
  font-size: 28rpx;
 color:#333;
}
.input_placeholder {
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(164,164,164,1);
line-height:28rpx;
}
.pass button{
  width:100%;
height:96rpx;
background:rgba(244,67,54,1);
border-radius:12rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height:96rpx;
margin: 80rpx 0 20rpx 0;

}
.bottom-pass{
  display: flex;
  justify-content: space-between;
}
.bottom-pass .register{
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(244,67,54,1);
line-height:28rpx;
}
.duanPic{
  width: 40rpx;
  height: 40rpx;
  line-height: 50rpx
}
