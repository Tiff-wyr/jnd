.apply{
  width: 100%;
  height: 100%;
  background: #fff;
}
.apply image{
    width:100%;
  height:340rpx;
}
.loan{
  padding: 0 36rpx;
}
.loan .wrap{
  width:100%;
  height:96rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  border:1rpx solid rgba(199,199,199,1);
  display: flex;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin: 40rpx 0 30rpx 0;
}
.wrap .img1{
  width: 28rpx;
height: 40rpx;
  line-height: 56rpx;
  margin-top:7rpx;
}
.wrap .img2{
  width: 38rpx;
height: 19rpx;
  line-height: 56rpx;
  margin-top:19rpx;
}
.wrap .input{
  margin-left: 15rpx;
  flex: 1;
  font-size: 28rpx;
 color:#333;
}
