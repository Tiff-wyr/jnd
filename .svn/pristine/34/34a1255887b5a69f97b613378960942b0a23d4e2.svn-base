/* pages/agent/borrower/borrower.wxss */

.top{
  background:rgba(255,255,255,1);
  padding: 0 36rpx;
  box-sizing: border-box;
}

.kong{
  text-align: center;
  margin-top: 100rpx;
}
.borr-middle {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
  background:rgba(255,255,255,1);
line-height:100rpx;
}

.borr-middle .new{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(244,67,54,1);
}


.borr-bottom .wrap{
  display: flex;
  justify-content: space-between;
  width:100%;
  height:192rpx;
  background:rgba(255,255,255,1);
  padding: 36rpx 36rpx;
  box-sizing: border-box;
}
.wrap-1{
    display: flex;
     flex: 1;
}
.btn {
  width: 140rpx;
  height: 46rpx;
background:rgba(244,67,54,1);
  border-radius: 23rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
  box-sizing: border-box;
  padding: 0 3rpx;
 
}

.wrap image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}
.borr-bottom .add{
    width:100%;
  height:12rpx;
  background:#f0f0f0;
}
.borr-bottom .wrap .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:32rpx;
}
.borr-bottom .wrap .address{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
line-height:45rpx;
}


