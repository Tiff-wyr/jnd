/* pages/organ/productCenter/productCenter.wxss */
.product-item{
  width:100%;
background:rgba(255,255,255,1);
padding: 0 36rpx 30rpx 36rpx;
box-sizing: border-box;
margin-bottom: 12rpx;
}
.name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:92rpx;
border-bottom: 1rpx solid #f0f0f0;
}
.pro-wrap{
  display: flex;
justify-content: space-between;
  padding-top: 30rpx;
  padding-bottom: 16rpx;
  box-sizing: border-box;
}
.limit{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(53,53,53,1);
margin-bottom: 20rpx;
}
.rate{
  text-align: center;
}
.time{
  text-align: right;
}
.text{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(164,164,164,1);
}
.bottom{
  position: fixed;
  left:0;
  right:0;
  bottom: 0;
width:100%;
height:140rpx;
background:rgba(255,255,255,1);
z-index: 998;
padding: 22rpx 36rpx;
box-sizing: border-box;
}
.bottom button{
height:96rpx;
background:rgba(205,69,69,1);
border-radius:12rpx;
line-height:96rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
}
.per-it{
  padding-bottom: 150rpx
}