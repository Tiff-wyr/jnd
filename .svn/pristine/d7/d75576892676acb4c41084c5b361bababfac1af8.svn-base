/* pages/agent/member/member.wxss */
.mem-top{
  width:100%;
height:617rpx;
background:rgba(255,255,255,1);
padding: 24rpx 36rpx;
box-sizing: border-box;
}
.mem-top .top-wrap{
  display: flex;
}
.top-wrap image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%
}
.top-wrap .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
margin-top: 20rpx;
margin-left: 10rpx;
}
.mem-top .select{
  font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(53,53,53,1);
line-height:45rpx;
margin: 40rpx 0 30rpx 0;
}
.mem-top .vip .vip-item{
  display: flex;

height:94rpx;
background:rgba(255,255,255,1);
border-radius:6rpx;
border:2rpx solid rgba(240,240,240,1);
line-height: 94rpx;
padding: 20rpx 20rpx;
box-sizing: border-box;
}
.vip-item .item-text{
    flex: 1;
      text-align: center;
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(53,53,53,1);
letter-spacing:1rpx;
line-height: 54rpx;
}
.vip-item .item-line{
  width:2rpx;
height:54rpx;
background:rgba(216,216,216,1);
border-radius:1rpx;
}
.vip-item .item-money{
    flex: 1;
  font-size:24rpx;
  text-align: center;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(53,53,53,1);
letter-spacing:1rpx;
line-height: 54rpx;
}
.mem-top .vip .vip-item .vip-btn{
  width:100rpx;
height:50rpx;
background:rgba(252,82,82,1);
border-radius:10rpx;
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:200;
color:rgba(255,255,255,1);
line-height:50rpx;
padding: 0 3rpx;
}
.mem-top .vip .empty{
  height: 30rpx;
background:rgba(255,255,255,1);
}
.mem-top .top-wrap .name{
  font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:32rpx;
}
.add{
      width:100%;
    height:12rpx;
    background:#f0f0f0;
}
.mem-bottom{
 width:100%;
background:rgba(255,255,255,1);
padding: 52rpx 36rpx 150rpx 36rpx;
box-sizing: border-box;
}
.mem-bottom .title{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(53,53,53,1);
line-height:32rpx;
margin-bottom: 30rpx;
}
.mem-bottom .title-top{
  display: flex;
  justify-content: space-around;

}
.img1{
  width: 88rpx;
  height: 88rpx;
}
.mem-bottom .title-top .bold{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
line-height:24rpx;
}
.mem-bottom .title-top .lighter{
  width: 220rpx;
font-size:22rpx;
font-family:PingFangSC-Light;
font-weight:300;
color:rgba(123,123,123,1);
line-height:30rpx;
margin-top: 8rpx;
}