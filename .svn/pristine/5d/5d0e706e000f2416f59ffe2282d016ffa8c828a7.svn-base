/* pages/agent/personMessage/personMessage.wxss */
.person{
  padding: 0 36rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background: #fff;
}
.person-item{
  height: 92rpx;
  border-bottom: 1rpx solid #f0f0f0;
  line-height: 92rpx;
  display: flex;
  justify-content: space-between
}
.person-item .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(0,0,0,1);
  line-height: 92rpx;
}
.person-item .data{
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(123,123,123,1);
  line-height: 92rpx;
}
.good-item{
    border-bottom: 1rpx solid #f0f0f0;
    padding: 30rpx 0;
    box-sizing: border-box;
}
.good-item .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(0,0,0,1);
}
.good-item .business{
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(123,123,123,1);
text-align: right;
margin-top: 10rpx;
}
.introduction-item{
    border-bottom: 1rpx solid #f0f0f0;
    padding: 30rpx 0;
    box-sizing: border-box;
}
.introduction-item .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(0,0,0,1);
}
.introduction-item .introduction{
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(123,123,123,1);
margin-top: 20rpx;

}

.bottom{
  position: fixed;
  left:0;
  right:0;
  bottom: 0;
width:100%;
height:140rpx;
background:rgba(255,255,255,1);
z-index: 998;
padding: 22rpx 36rpx;
box-sizing: border-box;
}
.bottom button{
height:96rpx;
background:rgba(205,69,69,1);
border-radius:12rpx;
line-height:96rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
}