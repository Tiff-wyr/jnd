.loan-top{
  width:100%;
height:198rpx;
background:rgba(255,255,255,1);
box-shadow:0px -1rpx 0px 0px rgba(240,240,240,1);
padding: 24rpx 36rpx 40rpx 55rpx;
box-sizing: border-box;
border-bottom: 1rpx solid #f0f0f0;
}
/* tab */
.tab-warp {
  padding: 0 20rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between
}
/* tab 主体 */
.tab-content {
  width: 100%;
  margin-bottom: 100rpx;
}
.agent-item{
height:200rpx;
background:rgba(255,255,255,1);
padding: 36rpx 36rpx;
box-sizing: border-box;
display: flex;
margin-bottom: 12rpx;
overflow: hidden;
}
.agent-item image{
  width:120rpx;
height:120rpx;
margin-right: 25rpx;
}
.agent-item .name{
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(69,69,69,1);
}
.agent-item .address{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
margin: 10rpx 0 10rpx 0;
}
.agent-item .good{
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);

}
.agent-item button{
  width:140rpx;
height:46rpx;
background:#CD4545;
border-radius:23rpx;
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
line-height:46rpx;
margin-right:0rpx;

}
.introduction{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(170,170,170,1);
line-height:30rpx;

}
.org-wrap{
  display: flex;
  justify-content: space-between;
  flex: 1
}
.org-wrap button{
  margin-right: 0rpx
}
.between{
flex: 1;
}
.picker-c{
  width: 80rpx;
    display: flex;
   font-size: 24rpx;
   line-height: 70rpx;
   height: 70rpx
}
.picker-c text{
  line-height:70rpx;
}
