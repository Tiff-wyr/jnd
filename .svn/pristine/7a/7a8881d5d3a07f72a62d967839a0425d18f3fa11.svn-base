  <import src="/components/tabBar/index.wxml" />

<view>
  <view class='apply'>

    <image src='/static/icon/apply/Bitmap.png'></image>
    <view class='loan'>
    <view style='display: flex;   justify-content: space-between'>
      <view class='name-wrap'>
          <image class='img1' src='/static/icon/apply/person.png'></image>
          <input class='input' placeholder-class='input_placeholder' bindblur='handlePhone' placeholder='填写姓名'></input>
        </view>
        <view class='sex-radio'>
        <radio-group class="sex-radio-group" bindchange="sexRadioChange">
            <label class="sex-radio-item" wx:for="{{sex}}" wx:key="{{index}}">
              <radio style="display:none" value="{{item.value}}" checked="{{item.checked}}" />
              <view class="wai">
                  <view wx:if="{{item.checked}}" class='nei'></view>
              </view>
              {{item.name}}
            </label>
          </radio-group>
        </view>
    </view>
      
      <view class='wrap'>
        <image class='img1' src='/static/icon/apply/money.png'></image>
        <input class='input' placeholder-class='input_placeholder' bindblur='handlePhone' placeholder='贷款金融（单位：万元）'></input>
      </view>

        <view class='city'>
     <view class='city-left'>
          <image class='img1' src='/static/icon/phone.png'></image>
                <picker bindchange="bindPickerChange" value="{{pindex}}" range-key="provincial" range="{{provinceData}}">
                    <view class="picker">
                      <text>{{provinceData[pindex].provincial}}</text>
                    </view>
                  </picker>
     </view>
       <view class='city-right'>
       
       </view>
  </view>

    <!-- 单选框组 -->
    <view>
    <radio-group class="radio-group" bindchange="typesChange">
        <label class="{{item.checked? 'radio red-border' : 'radio'}}" wx:for="{{types}}">
          <radio style="display:none" value="{{item.value}}" checked="{{item.checked}}" />
          {{item.name}}
          <icon wx:if="{{item.checked}}" type="success" size="15" color="red" />
        </label>
      </radio-group>
    </view>
    <!-- 多选框 -->
    <view>
      <checkbox-group class="checkbox-group" bindchange="checkboxChange">
        <label class="{{item.checked? 'checkbox red-border' : 'checkbox'}}"  wx:for="{{checkboxs}}">
          <checkbox style="display:none" value="{{item.value}}" checked="{{item.checked}}" />
          {{item.name}}
           <icon class="checkbox-icon"  wx:if="{{item.checked}}" type="success" size="15" color="red" />
        </label>
      </checkbox-group>
    </view>
  
    <view class='wrap'>
      <image class='img1' src='/static/icon/apply/phone.png'></image>
      <input class='input' placeholder-class='input_placeholder' bindblur='handlePhone' placeholder='手机号'></input>
    </view>

    <view class='wrapper'>
      <view class='code'>
        <image class='img2' src='/static/icon/pass.png'></image>
        <input class='input' placeholder-class='input_placeholder' password='true' placeholder='短信验证码' bindblur='handleCode'></input>
      </view>
      <view class='sendCode' bindtap='sendCode'>{{textCode}}</view>
    </view>
    <button>申请提交</button>

  </view>

  </view>
  <template is="tabBar" data="{{tabBar:bindData.tabBar}}" />
</view>