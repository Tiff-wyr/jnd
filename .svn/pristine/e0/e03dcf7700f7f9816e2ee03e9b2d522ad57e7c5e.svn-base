<import src="/components/tabBar/index.wxml" />
<view>
  <view class='loan-top'>
    <view class='head-wrap'>
      <!-- 城市选择框 -->
      <picker bindchange="bindPickerChange" value="{{index}}" range-key="cname" range="{{array}}">
        <view class="picker">
          <text>{{array[index].cname}}</text>
          <view class='triangle'></view>
        </view>
      </picker>
      <!-- 搜索框 -->
      <view class='search-wrap'>
        <view class='iconfont icon-sousuo search-img'></view>
        <input class='search-input' placeholder='搜索经纪人或机构'></input>
      </view>
    </view>
    
    <view class='tab-warp'>
      <view class="picker">
      <picker bindchange="bindPickerZui" value="{{indexZ}}" range-key="name" range="{{arr}}">
        <view class="picker">
          <text>{{arr[indexZ].name}}</text>
          <view class='triangle'></view>
        </view>
      </picker>
      </view>
      <view class='{{tab === "1" ? "red picker" : "picker" }}' data-id='1' bindtap='handlerTabClick'>
        <text>经纪人</text>
      </view>
      <view class='{{tab === "2" ? "red picker" : "picker" }}' data-id='2' bindtap='handlerTabClick'>
        <text>机构</text>
      </view>
      <view class='{{tab === "3" ? "red picker" : "picker" }}' data-id='3' bindtap='handlerTabClick'>
        <text>产品</text>
      </view>
    </view>
  </view>

  <view class='tab-content'>
    <view wx-if='{{tab === "1"}}'>
      <view wx:for='{{agentData}}' wx:key='{{index}}' class='agent-item' bindtap='handleAgent'>
        <image src='{{item.image}}'></image>
        <view class='between'>
          <view class='org-wrap'>
            <view>
              <view class='name'>{{item.brokerName}}</view>
              <view class='address'>{{item.businessAreaValue}} | 资深顾问</view>
            </view>
            <button style='margin-right:0rpx;'>立即沟通</button>
          </view>
          <view class='good'>
             {{item.businessScopeInfo}}
          </view>
        </view>

      </view>
    </view>



    <view wx-if='{{tab === "2"}}'>

      <view wx:for='{{organData}}' wx:key='{{index}}' class='agent-item' bindtap='handleOrgan'>
        <view style='display: flex; width: 100%'>
          <image></image>
          <view style='width: 100%'>
            <view class='org-wrap'>
              <view>
                <view class='name'>沈桂英</view>
                <view class='address'>北京</view>
              </view>
              <button>立即沟通</button>
            </view>
            <view class='introduction'>dd</view>
          </view>
        </view>

      </view>
    </view>
    <view wx-if='{{tab === "3"}}'>

      <view wx:for='{{productData}}' wx:key='{{index}}' class='agent-item' bindtap='handlePro'>
        <image></image>
        <view>
          <view class='name'>个人住房按揭贷款</view>
          <view class='address'>额度：10万～50万</view>
          <view class='address'>额度：10万～50万</view>
        </view>

        <button>立即沟通</button>




      </view>

    </view>
  </view>




  <template is="tabBar" data="{{tabBar:bindData.tabBar}}" />
</view>